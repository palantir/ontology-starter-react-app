{
    "extends": ["eslint:recommended", "plugin:import/typescript", "plugin:react-hooks/recommended"],
    "env": {
        "es6": true
    },
    "ignorePatterns": ["webpack.config.js", "*.json"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "latest",
        "project": "./src/tsconfig.json"
    },
    "plugins": ["@typescript-eslint", "import", "react-hooks", "react"],
    "rules": {
        "no-undef": "off",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "error"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
